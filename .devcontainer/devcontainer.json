{
  "name": "mkdocs-devcontainer",
  "build": {
    "dockerfile": "Dockerfile" //コンテナを「どのDockerfileでビルドするか」を指定
  },
  "context": "..",
  //Dockerの「ビルドコンテキスト」（=Dockerfileが見える範囲（ファイルがコピーできる範囲））指定．
  //".."は「devcontainer.jsonの一つ上の階層」

  "workspaceFolder": "/workspace",
  //コンテナの中でvscodeが開く作業ディレクトリを指定

  "forwardPorts": [8000],
  //コンテナ内部のポート番号を外（ホスト）に転送

  "postCreateCommand": "pip install --no-cache-dir -r /workspace/requirements.txt",
  //コンテナの作成が完了した後に自動で実行されるコマンド
  //--no-cache-dirはキャッシュを使用せずにインストールするオプション
  //-rはrequirementsファイルを読み込むオプション

  "remoteUser": "root",
  //コンテナ内で作業を行うユーザーを指定

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "yzhang.markdown-all-in-one",
        "ms-azuretools.vscode-docker"
      ]
    }
  }
}
